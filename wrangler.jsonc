{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "outie",
  "main": "src/worker.ts",
  "compatibility_date": "2025-01-10",
  "compatibility_flags": ["nodejs_compat"],
  "account_id": "14c4011b68b618c5b86f0aa053a834b3",

  // Workers AI for embeddings
  "ai": {
    "binding": "AI"
  },

  // Durable Objects
  "durable_objects": {
    "bindings": [
      {
        "name": "ORCHESTRATOR",
        "class_name": "Orchestrator"
      },
      {
        "name": "SANDBOX",
        "class_name": "OutieSandbox"
      }
    ]
  },

  "migrations": [
    {
      "tag": "v1",
      "new_sqlite_classes": ["Outie"]
    },
    {
      "tag": "v2"
    },
    {
      "tag": "v3",
      "new_sqlite_classes": ["OutieSandbox"]
    },
    {
      "tag": "v4",
      "new_sqlite_classes": ["Orchestrator"]
    },
    {
      "tag": "v5",
      "deleted_classes": ["Outie"]
    }
  ],

  // Enable logs (including container logs)
  "observability": {
    "enabled": true
  },

  // Sandbox container for OpenCode
  "containers": [
    {
      "class_name": "OutieSandbox",
      "image": "./Dockerfile",
      "instance_type": "basic"
    }
  ],

  "vars": {
    "ENVIRONMENT": "development",
    "CF_ACCOUNT_ID": "14c4011b68b618c5b86f0aa053a834b3",
    "CF_AIG_GATEWAY_ID": "outie"
  }

  // Secrets (set via wrangler secret put):
  // - ANTHROPIC_KEY: Anthropic API key for OpenCode
  // - TELEGRAM_BOT_TOKEN: Bot token from @BotFather
  // - TELEGRAM_CHAT_ID: Your Telegram user ID
  // - TELEGRAM_WEBHOOK_SECRET: Random secret for webhook verification
}
